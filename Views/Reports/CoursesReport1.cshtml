@model IEnumerable<MVC5Demo.Models.VIewModel.CoursesReport1VM>

@{
    ViewBag.Title = "CoursesReport1";
}

<h2>CoursesReport1</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeacherCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvgGrade)
        </th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvgGrade)
            </td>

        </tr>
    }

</table>

<pre>@ViewBag.SQL</pre>
